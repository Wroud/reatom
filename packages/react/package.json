{
  "name": "@reatom/react",
  "version": "1.0.0-rc1",
  "description": "React bindings for @reatom/core",
  "homepage": "https://github.com/artalar/reatom/tree/master/packages/react",
  "repository": "https://github.com/artalar/reatom",
  "license": "MIT",
  "source": "index.ts",
  "main": "build/index.js",
  "umd:main": "build/index.umd.js",
  "module": "build/index.mjs",
  "unpkg": "build/index.umd.js",
  "types": "build/src/index.d.ts",
  "scripts": {
    "prepublishOnly": "npm run rebuild && npm run test",
    "postpublish": "npm run clean",
    "build": "microbundle",
    "clean": "rimraf build/",
    "rebuild": "npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "prettify": "prettier --write '**/*.(j|t)s'",
    "prettify:watch": "onchange '**/*.(j|t)s' -- prettier --write {{changed}}",
    "ts-check": "tsc --noEmit",
    "ts-check:watch": "npm run ts-check -- --watch",
    "update": "npx npm-check-updates -u"
  },
  "dependencies": {
    "@reatom/core": "^1.0.0"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "keywords": [
    "state",
    "store",
    "flux",
    "atom",
    "reactive",
    "reactivity",
    "redux",
    "effector",
    "mobx",
    "state-manager",
    "state manager",
    "reatom",
    "react",
    "hooks"
  ],
  "files": [
    "/README.md",
    "/package.json",
    "/index.ts",
    "/build"
  ],
  "devDependencies": {
    "microbundle": "^0.11.0"
  }
}
